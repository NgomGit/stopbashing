<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ngomb.stopbashing">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CreateAccountActivity"
            android:parentActivityName=".activities.LoginActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activities.ParentOrFriendActivity"
            android:parentActivityName=".activities.LoginActivity" />
        <activity
            android:name=".activities.PasswordForgetActivity"
            android:parentActivityName=".activities.ParentOrFriendActivity" />
        <activity android:name=".activities.NewPasswordActivity" />
        <activity android:name=".fragments.HomeFragmentActivity" />
        <activity android:name=".fragments.GalerieFragmentActivity" />
        <activity android:name=".fragments.CameraFragmentActivity"></activity>
    </application>

</manifest>